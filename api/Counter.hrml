<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Run Count</title>
</head>
<body>
  <h1>Script Run Count: <span id="runCount">0</span></h1>
  
  <script>
    async function updateRunCount() {
      try {
        const response = await fetch('/api/getCount');
        const data = await response.json();
        document.getElementById('runCount').textContent = data.runCount;
      } catch (error) {
        console.error('Error fetching count:', error);
      }
    }
    
    // Update every 5 seconds
    setInterval(updateRunCount, 5000);
    updateRunCount();  // initial fetch
  </script>
</body>
</html>
